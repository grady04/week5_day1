{% extends 'base.html.j2'%}

{% block css %}
<link rel="stylesheet" href="{{url_for('static',filename='css/pokemon.css')}}">
{% endblock %}

{% block title %}
Pokemon Team
{% endblock %}

{%block content %}

<h1>Pokemon Team</h1>
<form action="{{url_for('pokemon')}}" method="POST">

  <div class="mb-3">
    {{form.pokemon.label(class="form-label")}}
    <label for="pokemon_name" class="form-label">Name?</label>
    <input type="text" name="pokemon_name" class="form-control" id="year">
  </div>

  <div style="color:red"><small>{{error}}</small></div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>


{%if pokedex_entry%}
<table class="table table-striped table-hover table-primary">
  <thead>
    <tr>
      <th scope="col">name</th>
      <th scope="col">base_exp</th>
      <th scope="col">sprites</th>
      <th scope="col">ability</th>
      <th scope="col">hp</th>
      <th scope="col">attack</th>
      <th scope="col">defense</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th scope="row">{{pokedex_entry.name}}</th>
      <td>{{pokedex_entry.base_exp}}</td>
      <td>{{pokedex_entry.sprites}}</td>
      <td>{{pokedex_entry.ability}}</td>
      <td>{{pokedex_entry.hp}}</td>
      <td>{{pokedex_entry.attack}}</td>
      <td>{{pokedex_entry.defense}}</td>
    </tr>
  </tbody>

</table>
{% endif %}

{% endblock %}