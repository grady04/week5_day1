{% extends 'base.html.j2'%}

{% block css %}
<link rel="stylesheet" href="{{url_for('static',filename='css/pokemon.css')}}">
{% endblock %}

{% block title %}
Find Pokemon
{% endblock %}

{%block content %}

<h1>Find Pokemon</h1>
<form action="{{url_for('poke.pokemon')}}" method="POST">
  {{form.hidden_tag()}}

  <div class="mb-3">
    {{form.pokemon.label(class="form-label")}}
    {{form.pokemon(class="form-control")}}
  </div>

  <div>
  <br>
  </div>

  <div>
    {{form.find(class="btn btn-primary form-control")}}
  </div>

  <div>
  <br>
  </div>

</form>


{%if pokedex_entry%}
<table class="table table-striped table-hover table-primary">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">name</th>
      <th scope="col">base_exp</th>
      <th scope="col">ability</th>
      <th scope="col">hp</th>
      <th scope="col">attack</th>
      <th scope="col">defense</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><img src="{{pokedex_entry.sprites}}" /></td>
      <th scope="row">{{pokedex_entry.name}}</th>
      <td>{{pokedex_entry.base_exp}}</td>
      <td>{{pokedex_entry.ability}}</td>
      <td>{{pokedex_entry.hp}}</td>
      <td>{{pokedex_entry.attack}}</td>
      <td>{{pokedex_entry.defense}}</td>
    </tr>
  </tbody>

</table>
{% endif %}


{% endblock %}